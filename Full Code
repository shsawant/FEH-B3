        }

        MoveRPS(75, AfterFuelCrankX, AfterFuelCrankY);
        CheckHeading(180);

        arm_servo.SetDegree(10);
        MoveTime(270, 75, 1600);
        CheckHeading(180);

        MoveTime(180, 83, 1200);

        MoveTime(90, 75, 2000);






    SD.CloseLog();




   return 0;
}
